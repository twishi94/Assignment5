<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#81a1e5" />
            <gradient android:angle="-90" android:startColor="#6a91d4" android:endColor="#3d439c"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#b7baed" />
            <solid android:color="#8485ca"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#9dacd0" />
            <gradient android:angle="-90" android:startColor="#555ff1" android:endColor="#5f62be" />
        </shape>
    </item>
</selector>